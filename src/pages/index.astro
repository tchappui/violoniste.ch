				</p>
				<div class="container mx-auto mt-8 p-4 text-center">
					&copy 2024 - Evelyne Chappuis
				</div>
			</div>
		</footer>

		<!-- JavaScript to handle contact link redirection and obfuscation -->
		<script>
			// Fonction pour reconstruire les informations de contact en utilisant des entités HTML
			function decodeEmail() {
				const email = "&#101;&#118;&#101;&#108;&#121;&#110;&#101;" + "&#64;" + "&#118;&#105;&#111;&#108;&#111;&#110;&#105;&#115;&#116;&#101;&#46;&#99;&#104;";
				return email.replace(/&#(\d+);/g, (_, dec) => String.fromCharCode(dec));
			}

			function decodeWhatsApp() {
				// Numéro WhatsApp obfusqué par segments
				const whatsappSegments = ["&#43;", "4", "1", "7", "6", "3", "4", "2", "4", "0", "3", "5"];
				const whatsapp = whatsappSegments.map(segment => segment.replace(/&#(\d+);/g, (_, dec) => String.fromCharCode(dec))).join('');
				return "https://wa.me/" + whatsapp.replace(/\+/g, "");
			}

			// Modifier les liens de contact
			document.addEventListener('DOMContentLoaded', () => {
				const contactEmailLink = document.getElementById('contact-email-link');
				const contactWhatsAppLink = document.getElementById('contact-whatsapp-link');
				const footerEmailLink = document.getElementById('footer-email-link');
				const footerWhatsAppLink = document.getElementById('footer-whatsapp-link');

				// Reconstituer les adresses email et WhatsApp
				const email = decodeEmail();
				const whatsappLink = decodeWhatsApp();

				// Mettre à jour les liens dans le footer et le header
				contactEmailLink.href = "mailto:" + email;
				contactWhatsAppLink.href = whatsappLink;
				footerEmailLink.href = "mailto:" + email;
				footerWhatsAppLink.href = whatsappLink;

				// Mettre à jour le texte affiché
				footerEmailLink.innerHTML = email;
				footerWhatsAppLink.innerHTML = whatsappLink.replace("https://wa.me/", "+41 ");
			});
		</script>
	</body>
</html>